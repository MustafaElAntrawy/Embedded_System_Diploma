#include <stdio.h>

int main(){
	float a[100];
	int n;
	printf("Enter the elements of data");
	fflush(stdin);fflush(stdout);
	scanf("%d", n);
	int i;
	for(i = 0; i < n; ++i){
		for(i = 0; i <2; ++i){
			printf("%d. Enter number: ", i+1,);
			fflush(stdin);fflush(stdout);
			scanf("%f", &a[i]);
		}
	}

	return 0;
}
