#include <stdio.h>

int main(){
	int n;
	printf("Enter an integer: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n);
	if (n < 0) printf("Error!! Factorial of negative number doesn't exist.");
	else if (n <= 1) printf ("Factotial = %d", 1);
	else{
		long i,fac = 1;
		for (i = 1; i <= n ;++i){
			fac *= i;
		}
		printf ("Factotial = %d", fac);
	}

	return 0;
}
